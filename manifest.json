{
    "manifest_version": 2,
    "name": "SHOWROOM Live Player",
    "version": "1.0.0",
    "description": "SHOWROOMの配信画面を見やすくします",
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.showroom-live.com/*"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "main.css"
            ]
        }
    ]
}